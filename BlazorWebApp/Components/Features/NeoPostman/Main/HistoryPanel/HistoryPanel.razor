@namespace BlazorWebApp.Components.Features.NeoPostman.Main

<section class="neo-history-panel" aria-label="History">
    <div class="neo-history-head">
        <strong>History</strong>
        <button class="neo-btn" type="button" @onclick="HandleBackClick">
            <svg class="neo-ic" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M10 6l-6 6 6 6v-4h10v-4H10z" /></svg>
            Back
        </button>
    </div>
    <div class="neo-history-list">
        <table class="neo-table neo-mono">
            <thead><tr><th>Time</th><th>User</th><th>Method</th><th>URL</th><th>Status</th></tr></thead>
            <tbody>
                @if (Entries.Count > 0)
                {
                    foreach (var entry in Entries)
                    {
                        <tr>
                            <td>@entry.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@entry.User</td>
                            <td><span class="pill">@entry.Method</span></td>
                            <td class="neo-history-url">@entry.Url</td>
                            <td><span class="pill @GetStatusClass(entry.StatusCode)">@entry.StatusCode</span></td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="neo-empty">Chua co lich su.</td></tr>
                }
            </tbody>
        </table>
    </div>
</section>