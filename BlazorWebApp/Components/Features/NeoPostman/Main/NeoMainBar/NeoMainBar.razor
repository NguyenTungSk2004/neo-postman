@namespace BlazorWebApp.Components.Features.NeoPostman.Main

<div class="neo-mainbar">
    <div class="neo-mainbar-title">
        <label class="neo-sr-only" for="neo-env-select">Environment</label>
        <span>Environment:</span>
        <select id="neo-env-select" aria-label="Environment">
            <option value="dev">Development</option>
            <option value="staging">Staging</option>
            <option value="prod">Production</option>
        </select>
    </div>
    <button class="neo-btn-history" type="button" @onclick="HandleHistoryClick" aria-pressed="@IsHistoryMode">
        <svg class="neo-ic" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M13 3a9 9 0 1 0 9 9h-2a7 7 0 1 1-7-7V3zm-1 5h2v6h-6v-2h4z" /></svg>
        History
        @if (HasHistoryEntries)
        {
            <span class="neo-dot" aria-hidden="true"></span>
        }
    </button>
</div>