@namespace BlazorWebApp.Components.Features.NeoPostman.Main

<section class="neo-builder" aria-label="Request builder">
    <div class="neo-builder-row">
        <div class="neo-select">
            <label class="neo-sr-only" for="neo-method-select">HTTP Method</label>
            <select id="neo-method-select" value="@Method" @onchange="HandleMethodChange">
                <option>GET</option>
                <option>POST</option>
                <option>PUT</option>
                <option>DELETE</option>
                <option>PATCH</option>
            </select>
        </div>
        <div class="neo-url">
            <label class="neo-sr-only" for="neo-url-input">Request URL</label>
            <input id="neo-url-input" value="@Url" @oninput="HandleUrlInput" />
        </div>
        <button class="neo-btn-send" type="button" @onclick="HandleSendClick">
            Send <span class="neo-send-icon" aria-hidden="true">&rsaquo;</span>
        </button>
    </div>
</section>