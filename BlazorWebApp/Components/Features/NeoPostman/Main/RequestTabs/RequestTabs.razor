@namespace BlazorWebApp.Components.Features.NeoPostman.Main

<section class="neo-request-tabs" aria-label="Request configuration">
    <input type="radio" name="neo-req-tab" id="neo-rtab-params" checked />
    <input type="radio" name="neo-req-tab" id="neo-rtab-auth" />
    <input type="radio" name="neo-req-tab" id="neo-rtab-headers" />
    <input type="radio" name="neo-req-tab" id="neo-rtab-body" />
    <input type="radio" name="neo-req-tab" id="neo-rtab-scripts" />

    <nav class="neo-subtabs">
        <label for="neo-rtab-params">Params</label>
        <label for="neo-rtab-auth">Authorization</label>
        <label for="neo-rtab-headers">Headers</label>
        <label for="neo-rtab-body">Body</label>
        <label for="neo-rtab-scripts">Pre-request / Tests</label>
    </nav>

    <div class="neo-panes">
        <div class="neo-pane neo-pane-params" id="neo-pane-params">
            <table class="neo-table neo-mono">
                <thead>
                    <tr><th>KEY</th><th>VALUE</th><th>Mo ta</th></tr>
                </thead>
                <tbody>
                    <tr><td>page</td><td>1</td><td>Trang hien tai</td></tr>
                    <tr><td>limit</td><td>20</td><td>Kich thuoc trang</td></tr>
                </tbody>
            </table>
        </div>
        <div class="neo-pane neo-pane-auth" id="neo-pane-auth">
            <table class="neo-table neo-mono">
                <thead><tr><th>Loai</th><th>Truong</th><th>Gia tri</th></tr></thead>
                <tbody><tr><td>Bearer</td><td>Authorization</td><td>Bearer &lt;token&gt;</td></tr></tbody>
            </table>
        </div>
        <div class="neo-pane neo-pane-headers" id="neo-pane-headers">
            <table class="neo-table neo-mono">
                <thead><tr><th>HEADER</th><th>VALUE</th></tr></thead>
                <tbody>
                    <tr><td>Content-Type</td><td>application/json</td></tr>
                    <tr><td>Accept</td><td>application/json</td></tr>
                </tbody>
            </table>
        </div>
        <div class="neo-pane neo-pane-body" id="neo-pane-body">
            <label class="neo-sr-only" for="neo-body-editor">Request body</label>
            <textarea id="neo-body-editor" class="neo-code-editor neo-mono" spellcheck="false" @oninput="HandleBodyInput">@_currentBody</textarea>
        </div>
        <div class="neo-pane neo-pane-scripts" id="neo-pane-scripts">
            <pre class="neo-mono">// Pre-request / Tests (mock)</pre>
        </div>
    </div>
</section>
