@namespace BlazorWebApp.Components.Features.NeoPostman.Main

<section class="neo-response" aria-label="Response">
    <div class="neo-response-head">
        <strong>Response</strong>
        <span class="@GetStatusChipClass()">@StatusLabel</span>
        <span class="neo-chip">@TimeLabel</span>
        <span class="neo-chip">@SizeLabel</span>
    </div>

    <input type="radio" name="neo-res-tab" id="neo-res-pretty" checked />
    <input type="radio" name="neo-res-tab" id="neo-res-raw" />
    <input type="radio" name="neo-res-tab" id="neo-res-preview" />

    <nav class="neo-response-tabs">
        <label for="neo-res-pretty">Pretty</label>
        <label for="neo-res-raw">Raw</label>
        <label for="neo-res-preview">Preview</label>
    </nav>

    <div class="neo-response-viewer">
        <div class="neo-view neo-view-pretty" id="neo-view-pretty">
            <pre class="neo-mono">@PrettyContent</pre>
        </div>
        <div class="neo-view neo-view-raw" id="neo-view-raw">
            <pre class="neo-mono">@RawContent</pre>
        </div>
        <div class="neo-view neo-view-preview" id="neo-view-preview">
            <div class="neo-preview-box">(Xem truoc HTML)</div>
        </div>
    </div>
</section>