@page "/login"

<PageTitle>Login</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Đăng nhập</MudText>
<MudText Class="mb-4">Vui lòng đăng nhập để tiếp tục.</MudText>

<MudForm>
    <MudTextField T="string" Label="Email" Variant="Variant.Outlined" Class="mb-4"></MudTextField>
    <MudTextField T="string" Label="Mật khẩu" Variant="Variant.Outlined" InputType="InputType.Password" Class="mb-4"></MudTextField>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Đăng nhập</MudButton>
</MudForm>
